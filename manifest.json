{
  "manifest_version": 3,
  "name": "Form Auto Filler Widget",
  "version": "2.0",
  "description": "Shows a floating widget to auto-fill forms on specific websites you approve.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "settings.html",
  "icons": {
    "128": "images/icon128.png"
  },
  "action": {
    "default_title": "Form Auto Filler Settings"
  }
}

